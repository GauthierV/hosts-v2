{% extends 'base.html.twig' %}

{% block title %} {{ controller_name }} {% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('home.css') }}" />
{% endblock %}

{% block body %}
    <div class="page">

        <!--HEADER-->
        <div class="header">
            <img src="../assets/images/logo.jpg" alt="logo" height="120px">
            <h1>Best table</h1>
        </div>

    </div>
    <!--SLIDE-->
    <div class="fauxslide">
        <img src="../assets/images/lieu.jpg" alt="resto" height="280px">
        <img src="../assets/images/parc.jpg" height="280px">
        <p>"Un lieu unique chargé d'histoire pour inviter des convives"</p>
    </div>

    <!--SEARCH-->
    <div class="contener">
        <div class="recherche">
            <h3>Que recherchez vous ?</h3>
            <div class="filtre-ville">
                <label>Filtrer par département:</label>
                <SELECT name="nom" size="1">
                    <OPTION>44-Nantes
                    <OPTION>14-Caen
                    <OPTION>75-Paris
                    <OPTION>80-Somme
                    <OPTION>35-Rennes
                </SELECT>
            </div>
            <div class="filtre-prix">
                <label>Filtrer par prix:</label>
                <SELECT name="nom" size="1">
                    <OPTION>de 30 à 50
                    <OPTION>de 50 à 70
                    <OPTION>de 70 à 90
                    <OPTION>de 90 à 120
                    <OPTION>de 120 à +
                </SELECT>
            </div>
            <div class="search">
                <input class="search" type="search" placeholder="Entrez un mot-clef" name="search">
            </div>
            <a href="#" class="bouton2">Search</a>
        </div>

        <!--RESULT-->
        <div class="table">
            <div class="result">
                <div class="article">
                    <h2>Votre table</h2>
                    <img src="../assets/images/side2.jpg" alt="resto" height="280px">
                    <p>Ibi victu recreati et quiete, postquam abierat timor, vicos opulentos adorti
                        equestrium adventu cohortium, quae casu propinquabant, nec resistere planitie
                        porrecta conati digressi sunt retroque concedentes omne iuventutis robur relictum
                        in sedibus acciverunt.
                    </p>
                    <a href="hostSpace/tableDetail.html">
                        <button type="button">Détail</button>
                    </a>
                </div>
                <div class="article2">
                    <h2>Votre table</h2>
                    <img src="../assets/images/result.jpg" alt="resto" height="280px">
                    <p>Ibi victu recreati et quiete, postquam abierat timor, vicos opulentos adorti
                        equestrium adventu cohortium, quae casu propinquabant, nec resistere planitie
                        porrecta conati digressi sunt retroque concedentes omne iuventutis robur relictum
                        in sedibus acciverunt.
                    </p>
                    <a href="hostSpace/tableDetail.html">
                        <button type="button">Détail</button>
                    </a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
